# Debug output
 project: <%= project_name %>
 suborg: <%= sub_organization_id %>
 env: <%= enviroment_id %>
 graph: <%= graph_id %>
 version: <%= version %>


apiVersion: apps/v1
kind: Deployment
metadata:
  name: solr-deployment
  labels:
    app: solr
spec:
  replicas: 1
  selector:
    matchLabels:
      app: solr
  template:
    metadata:
      labels:
        app: solr
    spec:
      containers:
        - name: solr
          image: ravi8881/<%= @project_name %>-<%= @sub_organization_id %>-<%= @enviroment_id %>-<%= @graph_id %>:<%= @version %>
          ports:
            - containerPort: 8983
