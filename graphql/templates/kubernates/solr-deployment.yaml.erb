apiVersion: apps/v1
kind: Deployment
metadata:
  name: solr-deployment-<%= @graph_id %>
  namespace: <%= @organizationID %>
  labels:
    app: solr-<%= @graph_id %>
spec:
  replicas: 1
  selector:
    matchLabels:
      app: solr-<%= @graph_id %>
  template:
    metadata:
      labels:
        app: solr-<%= @graph_id %>
    spec:
      initContainers:
        - name: fix-permissions
          image: busybox:1.36.1
          command: ["sh", "-c", "chown -R 8983:8983 /data"]
          volumeMounts:
            - name: solr-data-volume
              mountPath: /data
          securityContext:
            runAsUser: 0 # Run as root to change ownership

      containers:
        - name: solr-<%= @graph_id %>
          image: ravi8881/<%= @organizationID %>-<%= @sub_organization_id %>-<%= @enviroment_id %>-<%= @graph_id %>:<%= @version %>
          ports:
            - containerPort: 8983
          volumeMounts:
            - name: solr-data-volume
              mountPath: /data # This path is where Solr looks for its cores
      volumes:
        - name: solr-data-volume
          persistentVolumeClaim:
            claimName: <%= @graph_id %> # This name must match the PVC metadata.name
      securityContext:
        runAsUser: 8983
        runAsGroup: 8983
        fsGroup: 8983