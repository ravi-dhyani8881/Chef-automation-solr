apiVersion: apps/v1
kind: Deployment
metadata:
  name: solr-deployment-<%= @ID %>
  namespace: <%= @organizationID %>
  labels:
    app: solr-<%= @ID %>
spec:
  replicas: 1
  selector:
    matchLabels:
      app: solr-<%= @ID %>
  template:
    metadata:
      labels:
        app: solr-<%= @ID %>
    spec:
      initContainers:
        - name: fix-permissions
          image: ravi8881/<%= @organizationID %>-<%= @sub_organization_id %>-<%= @enviroment_id %>-<%= @graph_id %>:<%= @version %>
          command: 
            - sh
            - '-c'
            - |
              echo "Copying initial Solr data from image to PVC..."
              mkdir -p /data/<%= @graph_id %>/<%= @ID %> /data/<%= @graph_id %>/data
              cp -R /var/solr/data/* /data/<%= @graph_id %>/<%= @ID %> || true
              cp -R /var/solr/move/* /data/<%= @graph_id %>/data || true
              chown -R 8983:8983 /data
              echo "Done copying Solr cores."
          volumeMounts:
            - name: solr-data-volume
              mountPath: /data
          securityContext:
            runAsUser: 0 # Run as root to change ownership

      containers:
        - name: solr-<%= @ID %>
          image: ravi8881/<%= @organizationID %>-<%= @sub_organization_id %>-<%= @enviroment_id %>-<%= @graph_id %>:<%= @version %>
          ports:
            - containerPort: 8983
          volumeMounts:
            - name: solr-data-volume
              mountPath: /data # This path is where Solr looks for its cores
      volumes:
        - name: solr-data-volume
          persistentVolumeClaim:
            claimName: <%= @graph_id %> # This name must match the PVC metadata.name
      securityContext:
        runAsUser: 8983
        runAsGroup: 8983
        fsGroup: 8983