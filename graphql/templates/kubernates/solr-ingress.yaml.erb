apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: solr-ingress-<%= @graph_id %>
  namespace: <%= @organizationID %>
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
  labels:
    app: solr-<%= @graph_id %>
spec:
  ingressClassName: nginx
  rules:
    - host: <%= @ID %>
      http:
        paths:
          - path: /solr/
            pathType: Prefix
            backend:
              service:
                name: solr-service-<%= @graph_id %>
                port:
                  number: 80
