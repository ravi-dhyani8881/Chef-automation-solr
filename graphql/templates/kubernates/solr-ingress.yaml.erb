apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: solr-ingress-<%= @ID %>
  namespace: <%= @organizationID %>
  labels:
    app: solr-<%= @ID %>
spec:
  ingressClassName: nginx
  rules:
    - host: <%= @domain %>
      http:
        paths:
          - path: /solr/
            pathType: Prefix
            backend:
              service:
                name: solr-service-<%= @ID %>
                port:
                  number: 80
